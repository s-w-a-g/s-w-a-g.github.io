html, body {
    font-size: 20px;
    font-weight: 300;
    color: {{ style.color.font }};
}

body {
    padding-top: 80px;
}

section {
    position: relative;
    padding-top: 2em;
    padding-bottom: 2em;
    border-bottom: dotted thin #dddddd;
}

p {
    margin-bottom: 1em;
}

h1, h2, h3, h4, h5, h6 {
    font-family: Belgrano, Times, serif;
}

table {
    width: 100%;
    margin: 1em 0;
}

th, td {
    border: solid thin #ccc;
    padding: 0.3em;
}

strong {
    font-weight: 500;
}

code {
    color: {{ style.color.primary }};
}

.row {
    margin-top: 1em;
    margin-bottom: 1em;
}

main h1, main h2 {
    color: {{ style.color.font }};
    text-align: center;
    margin-top: 0;
}

main h1 span, main h2 span {
    display: inline-block;
    box-shadow: 0px 0.3em 0px {{ style.color.font }};
    margin-left: auto;
    margin-right: auto;
    padding-bottom: 0.2em;
    margin-bottom: 1em;
}

main h3 {
    display: inline-block;
    font-weight: 700;
    font-size: 20px;
    border-top: solid thin {{ style.color.font }};
    border-bottom: solid thin {{ style.color.font }};
    line-height: 2em;
    margin-top: 2em;
}

.navbar-nav > li > a {
    padding-top: 1.5em;
}

.navbar-brand {
    height: auto;
}

#header-logo {
    height: 2em;
}

#header-logo path {
    fill: {{ style.color.primary }};
}

.processing-arrow {
    display: inline-block;
    padding-top: 1em;
    font-size: 5em;
    color: {{ style.color.primary }};
}

.pre-caption {
    font-size: 16px;
    border-top: solid thin #ccc;
    border-left: solid thin #ccc;
    border-right: solid thin #ccc;
    font-family: Menlo,Monaco,Consolas,"Courier New",monospace;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    padding: 9.5px;
}

.pre-caption + pre {
    font-size: 16px;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
}
